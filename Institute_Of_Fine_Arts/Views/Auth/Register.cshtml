@{
}

@model RegisterViewModel

<section class="form-container">
    <h2>User Registration</h2>
    <form class="register-form form-group" asp-controller="Auth" asp-action="Register" method="POST">
        <label for="name">Full Name</label>
        <input type="text" asp-for="FullName" id="name" required />

        <label for="email">Email Address</label>
        <input type="email" asp-for="Email" id="email" required />

        <label for="password">Password</label>
        <input type="password" asp-for="Password" id="password" required />

        <label for="role">Role</label>
        <select id="role" asp-for="Role" required>
            @foreach (var item in TempData["roles"] as List<IdentityRole>)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>

         <!-- <label for="admission_date">Admission Date</label>
         <input type="date" asp-for="AdmissionDate" id="admission_date" name="admission_date" />

         <label for="joining_date">Joining Date</label>
         <input type="date" asp-for="JoiningDate" id="joining_date" name="joining_date" />

         <label for="subject_handled">Subject Handled (for teachers)</label>
        <input type="text" asp-for="SubjectHandled" id="subject_handled" name="subject_handled" /> -->

        <button type="submit" class="form-btn">Register</button>

        <p class="register-link">Already have an account? <a asp-controller="Home" asp-action="Login">Login here</a></p>
    </form>
</section>