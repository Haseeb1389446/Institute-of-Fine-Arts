<div class="submitpantings container">
    <h2>Submit Your Artwork</h2>
    <form class="register-form" method="POST" enctype="multipart/form-data">
        <label for="competition">Select Competition:</label>
        <select name="competition_id" id="competition" required>
            <option value="">--Select Competition--</option>
            <option value="1">Annual Art Gala</option>
            <option value="2">Spring Art Contest</option>
            <!-- Dynamically populate this list in actual implementation -->
        </select>

        <label for="image">Upload Artwork:</label>
        <input type="file" name="image" id="image" accept="image/*" required />

        <label for="description">Description:</label>
        <textarea name="description" id="description" rows="4" required></textarea>

        <label for="submission_date">Submission Date:</label>
        <input type="date" name="submission_date" id="submission_date" required />

        <label for="remarks">Remarks (optional):</label>
        <textarea name="remarks" id="remarks" rows="3"></textarea>

        <button class="register-link" type="submit">Submit Painting</button>
    </form>
</div>