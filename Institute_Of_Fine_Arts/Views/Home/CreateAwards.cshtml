<div class="craeteawards container">
    <h2>Create Award</h2>
    <form>
        <label for="awardName">Award Name</label>
        <input type="text" id="awardName" placeholder="Enter award name" required>

        <label for="description">Award Description</label>
        <textarea id="description" rows="4" placeholder="Enter description" required></textarea>

        <label for="dateGiven">Date Given</label>
        <input type="date" id="dateGiven" required>

        <label for="role">Recipient Role</label>
        <select id="role" required>
            <option value="">Select Role</option>
            <option>Student</option>
            <option>Staff</option>
            <option>Manager</option>
        </select>

        <button type="submit">Submit</button>
    </form>
</div>