<!-- Main Content Start -->
<main class="main-content">
    <section class="section">
        <div class="container">
            <h2>Contact Us</h2>

            <!-- Contact Form -->
            <div class="contact-form">
                <h3>Get in Touch</h3>
                <form action="#" method="post">
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" id="name" name="name" placeholder="Your Name" required>
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" name="email" placeholder="Your Email" required>
                    </div>

                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" name="message" placeholder="Your Message" required></textarea>
                    </div>

                    <button type="submit" class="btn-submit">Send Message</button>
                </form>
            </div>

            <!-- Contact Info -->
            <div class="contact-info">
                <h3>Our Location</h3>
                <p><strong>Address:</strong> 123 Art Lane, Downtown, City Name, Country</p>
                <p><strong>Phone:</strong> +1 234 567 890</p>
                <p><strong>Email:</strong> contact@fineartsinstitute.com</p>

                <h3>Find Us on the Map</h3>
                <!-- Dummy Map Section -->
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed/v1/place?q=Institute+of+Fine+Arts&key=YOUR_API_KEY" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>

        </div>
    </section>
</main>
<!-- Main Content End -->