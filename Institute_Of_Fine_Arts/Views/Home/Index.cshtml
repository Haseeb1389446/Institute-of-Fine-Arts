<!-- Main Content Start -->
<main class="main-content">

    <!-- Hero Section with Background Image -->
    <section class="hero text-white text-center" style="background-image: url('~/images/image3.png'); background-size: cover; background-position: center; padding: 100px 0;">
        <div class="container">
            <h2>Welcome to the Institute of Fine Arts</h2>
            <p>Where Creativity Meets Excellence</p>
        </div>
    </section>

    <!-- Upcoming Competitions -->
    <section class="section">
        <div class="container">
            <h2>Upcoming Competitions</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/images/image1.png" class="card-img-top" alt="Spring Art Contest">
                        <div class="card-body">
                            <h5 class="card-title">Spring Art Contest</h5>
                            <p class="card-text">Date: May 20, 2025</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/images/image2.png" class="card-img-top" alt="Modern Sculpture Challenge">
                        <div class="card-body">
                            <h5 class="card-title">Modern Sculpture Challenge</h5>
                            <p class="card-text">Date: June 15, 2025</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/images/image4.png" class="card-img-top" alt="Creative Canvas Battle">
                        <div class="card-body">
                            <h5 class="card-title">Creative Canvas Battle</h5>
                            <p class="card-text">Date: July 10, 2025</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Ongoing Competitions -->
    <section class="section bg-light py-4">
        <div class="container text-center">
            <h2>Ongoing Competitions</h2>
            <img src="~/images/image6.png" class="img-fluid my-3" alt="Ongoing Competitions" style="max-width: 400px;">
            <p>Currently: 3 Competitions Running</p>
        </div>
    </section>

    <!-- Winners Section -->
    <section class="section">
        <div class="container">
            <h2>Recent Winners</h2>
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="~/images/image5.png" class="img-fluid rounded mb-2" alt="Sarah Johnson">
                    <p>🎨 Sarah Johnson - 1st Prize in Watercolor Art</p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="~/images/image5.png" class="img-fluid rounded mb-2" alt="David Lee">
                    <p>🎨 David Lee - 1st Prize in Modern Art</p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="~/images/image5.png" class="img-fluid rounded mb-2" alt="Maria Gomez">
                    <p>🎨 Maria Gomez - 1st Prize in Sculpture</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Announcements Section -->
    <section class="section bg-light py-4">
        <div class="container">
            <h2>Announcements</h2>
            <div class="row">
                <div class="col-md-6">
                    <img src="/images/image7.png" style="height='600px'; width='600px';" class="img-fluid rounded mb-2" alt="Exhibition">
                    <p>🎉 Upcoming Exhibition: Colors of Dreams - August 2025</p>
                </div>
                <div class="col-md-6">
                    <img src="/images/image8.png" style="height='600px'; width='600px';" class="img-flui rounded mb-2" alt="Workshops">
                    <p>📢 New Workshops Announced for Beginners and Experts!</p>
                </div>
            </div>
        </div>
    </section>

</main>
<!-- Main Content End -->
